<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_11sdp"
    android:paddingVertical="@dimen/_9sdp"
    android:layout_marginBottom="@dimen/_13sdp"
    android:background="@drawable/bg_white_border_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.app.fitnessgym.customWidget.CustomImageView
        android:id="@+id/ivLanguageName"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_english"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.app.fitnessgym.customWidget.CustomTextViewSemiBold
        style="@style/text_14_lite"
        android:id="@+id/tvLanguageName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/english"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvLanguageType"
        app:layout_constraintStart_toEndOf="@+id/ivLanguageName"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.app.fitnessgym.customWidget.CustomTextViewSemiBold
        style="@style/text_14_lite"
        android:id="@+id/tvLanguageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/english"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/languageCheckBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLanguageName"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <CheckBox
        android:id="@+id/languageCheckBox"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/language_selector"
        android:buttonTint="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>